<!DOCTYPE HTML>

<html>

<!-- Head -->
<%- include('partials/head'); %>

<head>
  <link rel="stylesheet" href="stylesheets/gallery.css" />
</head>

<body>
  <div id="page-container">

    <!-- Nav -->
    <%- include('partials/nav'); %>

    <div id="alt_background"></div>

    <!-- Header -->
    <header id="header">
      <div class="logo">
        <div>
          <h1><a href="/">Gallery</a></h1>
        </div>
      </div>
    </header>

    <!-- Banner -->
    <section id="banner">
      <div class="content">

        <h3>What We Offer At A Glance</h3>

        <!-- Slideshow container -->
        <div class="slideshow-container">

          <!-- Full-width images with number and caption text -->
          <div class="mySlides fade">
            <div class="numbertext">1 / 4</div>
            <img src="images/img_lights_wide.jpg" style="width:100%">
            <div class="text">Caption Text</div>
          </div>

          <div class="mySlides fade">
            <div class="numbertext">2 / 4</div>
            <img src="images/img_mountains_wide.jpg" style="width:100%">
            <div class="text">Caption Two</div>
          </div>

          <div class="mySlides fade">
            <div class="numbertext">3 / 4</div>
            <img src="images/img_nature_wide.jpg" style="width:100%">
            <div class="text">Caption Three</div>
          </div>

          <div class="mySlides fade">
            <div class="numbertext">4 / 4</div>
            <img src="images/img_snow_wide.jpg" style="width:100%">
            <div class="text">Caption Four</div>
          </div>

          <!-- Next and previous buttons -->
          <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
          <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <br>

        <!-- The dots/circles -->
        <div style="text-align:center">
          <span class="dot" onclick="currentSlide(1)"></span>
          <span class="dot" onclick="currentSlide(2)"></span>
          <span class="dot" onclick="currentSlide(3)"></span>
          <span class="dot" onclick="currentSlide(4)"></span>
        </div>

      </div>
    </section>

    <!-- Footer -->
    <%- include('partials/footer'); %>

    <!-- Scripts -->
    <script src="javascripts/main.js"></script>
    <script src="javascripts/gallery.js"></script>

  </div>
</body>
</html>
